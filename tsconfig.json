{
  "compilerOptions": {
    "outDir": "./dist",                    // Define onde os arquivos de saída irão
    "rootDir": "./src",                    // Define a pasta raiz dos arquivos TypeScript
    "declaration": true,                   // Gera arquivos .d.ts
    "emitDeclarationOnly": true,           // Gera apenas os arquivos de declaração .d.ts
    "moduleResolution": "node",            // Resolve módulos no estilo Node.js
    "strict": true,                        // Ativa verificações estritas de tipo
    "skipLibCheck": true,                  // Ignora verificação de tipos de bibliotecas externas
    "esModuleInterop": true,               // Interop para módulos ES
    "target": "esnext",                    // Define o alvo de compilação como ESNext
    "module": "commonjs"                   // Usa o sistema de módulos CommonJS
  },
  "include": ["src/**/*.ts"],              // Inclui todos os arquivos TypeScript da pasta src
  "exclude": ["node_modules", "dist"]      // Exclui node_modules e dist
}
